global-reset()

background-radial-gradient( alignment, type, color1, color2 )
  background -webkit-radial-gradient( alignment, type, color1, color2 )
  background -moz-radial-gradient( alignment, type, color1, color2 )
  background -mz-radial-gradient( alignment, type, color1, color2 )

$blue = #224e6d
textglow()
   text-shadow 0px 1px 10px rgba(0,183,255,1)
  
html
body
  height 100%
  color $blue
  font 18px 'Segoe UI', serif
  background white

#menu
  z-index 1003
  border-bottom-right-radius 10px
  padding 11px
  background #E6E6E6
  top 81px
  border-right 1px solid $blue
  border-bottom 3px solid $blue  
  position fixed
  box-shadow -8px 5px 26px rgba(0, 0, 0, 0.21)
  li
    margin-bottom 10px
    a
      color $blue

  &:hover
    textglow()
    background $blue
    a
      color white

// .section:not(#projects)
//   min-width 1100px
  
.section
  border-radius 4px
  margin-bottom 20px
  position relative
  background whitesmoke
  //box-shadow -8px 5px 26px rgba(0, 0, 0, 0.21)
  //background linear-gradient(left, rgba(255,255,255,0.1), rgba(255,255,255,0))
  .section-content
    padding 18px

.content
  padding 96px 63px 10px 63px
  min-width 676px

.header
  textglow()
  z-index 1000
  width 100%
  padding 0 40px 12px 10px
  border-radius 0
  box-shadow -8px 5px 8px rgba(0,0,0,0.21)
  background $blue
  //background linear-gradient(top, $blue 92%, rgba(36, 70, 94, 0) 100%)
  //SAVING background linear-gradient(left, rgba(255,255,255,0.1), rgba(255,255,255,0))
  position fixed
  // border-top-left-radius 5px
  // border-left 7px solid rgba(255, 255, 255, 0.16)
  // border-top 5px solid rgba(255,255,255,0.17)
  .position
    color white
    font-size 16px

#about
  font-size 20px

h1.me
  color white
  font-size 2em
  display inline-block

ul
  li
    list-style-type: none

.section-header
  border-bottom 3px solid
  border-top 1px solid
  border-right 1px solid
  border-bottom-right-radius 6px
  border-top-right-radius 6px
  margin-left -7px
  border-top-left-radius 7px
  position relative
  padding 8px
  font-weight bold
  font-size 16px
  display inline-block
  color #224e6d
  background #d1d1d1
  box-shadow 6px 6px 19px rgba(0, 0, 0, 0.16)
  &::before
    content ''
    display block
    position absolute
    left -1px
    bottom -10px
    border solid 4px transparent
    border-right-color #224e6d
    border-top-color #224e6d
    width 0
    height 0
    z-index 0
  &.projects-header
    z-index 3
    float left

.social
  top 0
  padding 4px 7px
  position fixed
  border-radius 38px
  font-size 1.5em
  right 0
  i
    color white
    textglow()
    padding 5px
    cursor pointer

#contact
  font-size 16px
  label
    display block
  input
  textarea
    width 100%
    max-width 400px
    font-size inherit
    font-family inherit


#projects
  padding 95px 150px 0 150px
  height 400px
  &.expanded
    padding-left 600px
    padding-right 600px
  #projects-list
    position relative
    z-index 1001
    perspective 1600
    width 185px 
    margin 0 auto
    li
      position absolute
      transform-origin 0 275px
      font-size 24px
      transform-style: preserve-3d 
      .face
        position absolute
        backface-visibility hidden
        padding 5px
        width 195px
        height 295px
        border-radius 4px
        background rgba(255, 255, 255, .5)
        border 3px solid rgba(255, 255, 255, .3)
        .inner
          background white
          width 100%
          height 100%
          border-radius 4px
          & > label
            padding 5px
        &.back
          box-shadow -8px 8px 39px rgba(0, 0, 0, 0.21)
          transform rotateY(180deg)
          .project-name
            padding 5px
            color #003457 
            font-size 19px
            display block
            position relative
            width 164px
            &:hover
              text-decoration underline

          .close
            color #00548D
            padding 5px
            position absolute
            top 5px
            right 5px
            cursor pointer
            font-size 20px
          .technology
            font-size 14px
            padding 5px
            .tech
              color white
              border-radius 4px
              padding 3px
              float left
              margin 5px 5px 0 0
              &.Actionscript
                background red
              &.Php
                background purple
              &.Coffeescript
                background rgb(162, 111, 111)
              &.Javascript
                background #F5CE95
              &.jQuery
                background teal
              &.Flex
                background grey
              &.XML
                background #259125
              &.HTML5
                background rgb(255, 99, 11)
              &.Stylus
                background #a1bc06
              &.Knockout 
                background rgb(255, 99, 11)
              &.Durandal
                background rgb(189, 0, 0)
              &.Papervision3D
                background #00007C
              &.Robotlegs
                background lighten(red, 20)

        &.front
          box-shadow -11px 10px 31px rgba(68, 68, 68, .09)
          cursor pointer  

      img
        border-radius 4px
        width 100%
        height 100%
a 
  text-decoration none

@media all and (max-width: 1223px)
  .social
    padding 0
  .content 
    padding-top 77px 
  .header 
    padding 6px 
    .me
      font-weight bold
      font-size 24px
    .position 
      font-size 14px
  #menu
    top 63px

@media all and (max-width: 920px)
  #projects
    #projects-list
      z-index 999 

