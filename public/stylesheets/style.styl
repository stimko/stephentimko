html
body
  overflow hidden
  color #00B7FF
  position relative
  font 18px 'Didact Gothic', serif
  background linear-gradient(top, rgb(0, 62, 87), rgb(31, 39, 43))
  height 100%
  perspective 1600
  //background-size 50px, 100px

ul
  li
    list-style-type: none

#contact
  float left

#about
  float left

#projects
  margin 0 auto
  width 300px
  overflow auto
  #projects-list 
    li
      position absolute
      transform-origin 0 275px
      font-size 24px
      transform-style: preserve-3d
      .face
        position absolute
        backface-visibility hidden
        padding 10px
        width 175px
        height 275px
        border-radius 7px
        box-shadow -25px 7px 40px rgba(0, 183, 255, .2)
        background rgba(255, 255, 255, .5)
        border 4px solid rgba(255, 255, 255, .3)
        .inner
          background white
          width 100%
          height 100%
          > label
            color #00B7FF
            padding 5px
        &.back
          transform rotateY(180deg)
          .project-name
            font-size 18px
          .close
            padding 5px
            float right
            cursor pointer
            font-size 20px
          .technology
            position absolute
            bottom 10px
            font-size 14px
            padding 5px
        &.front
          cursor pointer  

      img
        border-radius 7px
        width 100%
        height 100%
        background whitesmoke
a 
  color #00B7FF
