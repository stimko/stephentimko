global-reset()

background-radial-gradient( alignment, type, color1, color2 )
  background -webkit-radial-gradient( alignment, type, color1, color2 )
  background -moz-radial-gradient( alignment, type, color1, color2 )
  background -mz-radial-gradient( alignment, type, color1, color2 )

html
body
  color white
  position relative
  font 18px 'Segoe UI', serif
  background linear-gradient(top, #003457, rgb(31, 39, 43))
  height 100%
  perspective 1600
  padding 15px

.header
  padding 0 0 10px 10px
  text-shadow 0px 1px 10px rgba(0,183,255,1)
  background linear-gradient(left, rgba(255,255,255,0.1), rgba(255,255,255,0))
  .position
    font-size 16px

#about
  font-size 20px
  padding 20px

h1
  color white
  font-size 2.3em

ul
  li
    list-style-type: none

.section-header
  padding 20px
  float:left
  font-size 29px
  text-shadow 0px 1px 10px rgba(0,183,255,1)

.social
  padding 4px 7px
  border-bottom 3px solid rgba(255, 255, 255, .37)
  border-left 2px solid rgba(255, 255, 255, .37)
  border-radius 38px
  font-size 1.5em
  float right
  i
    color white
    text-shadow 0px 1px 10px rgba(0,183,255,1)
    padding 5px

#projects
  padding 135px 476px 0 476px
  height 400px
  background linear-gradient(left, rgba(255,255,255,0.1), rgba(255,255,255,0))
  border-left 8px solid rgba(255, 255, 255, 0.34)
  border-top 10px solid rgba(255, 255, 255, 0.17)
  border-radius 5px
  #projects-list
    width 145px 
    margin 0 auto
    li
      position absolute
      transform-origin 0 275px
      font-size 24px
      transform-style: preserve-3d 
      .face
        position absolute
        backface-visibility hidden
        padding 5px
        width 195px
        height 295px
        border-radius 4px
        box-shadow -11px 10px 31px rgba(255, 255, 255, 0.13)
        background rgba(255, 255, 255, .5)
        border 3px solid rgba(255, 255, 255, .3)
        .inner
          background white
          width 100%
          height 100%
          border-radius 4px
          & > label
            padding 5px
        &.back
          transform rotateY(180deg)
          .project-name
            padding 5px
            color #0077A7 
            font-size 20px
            display block
            position relative
            width 164px
            &:before
              content ''
              background linear-gradient(left, #CCC, rgba(245,245,245, 0))
              position absolute
              left 0
              bottom -2px
              width 100%
              height 4px
          .close
            color #0077A7
            padding 5px
            position absolute
            top 5px
            right 5px
            cursor pointer
            font-size 20px
          .technology
            font-size 14px
            padding 5px
            .tech
              color white
              border-radius 4px
              padding 3px
              float left
              margin 5px 5px 0 0
              &.Actionscript
                background red
              &.Php
                background purple
              &.Coffeescript
                background rgb(162, 111, 111)
              &.Javascript
                background #F5CE95
              &.jQuery
                background teal
              &.Flex
                background grey
              &.XML
                background #259125
              &.HTML5
                background rgb(255, 99, 11)
              &.Stylus
                background #a1bc06
              &.Knockout 
                background rgb(255, 99, 11)
              &.Durandal
                background rgb(189, 0, 0)
              &.Papervision3D
                background #00007C
              &.Robotlegs
                background lighten(red, 20)

        &.front
          cursor pointer  

      img
        border-radius 4px
        width 100%
        height 100%
a 
  text-decoration none


