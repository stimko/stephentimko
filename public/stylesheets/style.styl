body
  color rgb(167, 167, 167)
  position relative
  padding 50px
  font 18px "Verdana", Helvetica, Arial, sans-serif
  background-color rgb(95, 95, 95)

  background-size 10px, 10px

ul
  li
    list-style-type: none


#contact
  float left

#projects
  width 100%
  float left
  #projects-list
    min-width 700px
    margin 0 auto
    li
      width 300px
      height 400px
      padding 10px
      float left
a 
  color #00B7FF

@css {
  body{
    background-image: linear-gradient(90deg, rgba(0, 0, 0, .06) 1px, transparent 1px), linear-gradient(0, rgba(0, 0, 0, .06) 1px, transparent 1px)
  }

}
