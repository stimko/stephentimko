body
  color black
  position relative
  padding 50px
  font 18px "Verdana", Helvetica, Arial, sans-serif
  background-color rgb(0, 62, 87)
  background-size 50px, 100px

ul
  li
    list-style-type: none

#contact
  float left

#about
  float left

#projects
  width 100%
  float left
  #projects-list
    min-width 700px
    margin 0 auto
    li
      transform-origin bottom left
      transform rotate(25deg)
      font-size 12px
      background white
      border-radius 3px
      width 100px
      height 100px
      padding 10px
      float left
      margin 10px
a 
  color #00B7FF

