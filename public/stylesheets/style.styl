html
body
  overflow hidden
  color black
  position relative
  font 18px 'Didact Gothic', serif
  background linear-gradient(top, rgb(0, 62, 87), rgb(31, 39, 43))
  height 100%
  //background-size 50px, 100px

ul
  li
    list-style-type: none

#contact
  float left

#about
  float left

#projects
  margin 0 auto
  width 300px
  overflow auto
  #projects-list 
    li
      cursor pointer
      border 4px solid rgba(255, 255, 255, .3)
      position absolute
      top 30
      left 30
      transform-origin 0 275px
      font-size 24px
      background rgba(255, 255, 255, .5)
      border-radius 7px
      width 175px
      height 275px
      padding 10px
      box-shadow -25px 7px 40px rgba(0, 183, 255, .2)
      border-radius 10px
      .inner
        width 100%
        height 100%
        background white

      img
        border-radius 7px
        width 100%
        height 100%
        background whitesmoke
      label
        color rgba(0,147,112, 1)
        font-size 16px
        position absolute
        bottom 10px
        font-smoothing: antialiased
a 
  color #00B7FF
