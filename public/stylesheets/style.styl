global-reset()

html
body
  overflow hidden
  color rgb(0, 159, 221)
  position relative
  font 18px 'Didact Gothic', serif
  background linear-gradient(top, rgb(0, 62, 87), rgb(31, 39, 43))
  height 100%
  perspective 1600

h1
  color white
  font-size 3em
  background black
  text-shadow: 0px 1px 0px #999, 0px 2px 0px #888, 0px 3px 0px #777, 0px 4px 0px #666, 0px 5px 0px #555, 0px 6px 0px #444, 0px 7px 0px #333, 0px 8px 7px #001135

ul
  li
    list-style-type: none

.social
  font-size 2.5em
  float right
  i
    padding 2px

#contact
  float left

#about
  float left

#projects
  margin 0 auto
  width 300px
  overflow auto
  #projects-list 
    li
      position absolute
      transform-origin 0 275px
      font-size 24px
      transform-style: preserve-3d 
      .face
        position absolute
        backface-visibility hidden
        padding 5px
        width 175px
        height 275px
        border-radius 4px
        box-shadow -25px 7px 40px rgba(0, 183, 255, .2)
        background rgba(255, 255, 255, .5)
        border 3px solid rgba(255, 255, 255, .3)
        .inner
          background white
          width 100%
          height 100%
          border-radius 4px
          & > label
            padding 5px
        &.back
          transform rotateY(180deg)
          .project-name
            font-size 18px
            width 100%
            background whitesmoke
          .close
            padding 5px
            float right
            cursor pointer
            font-size 20px
          .technology
            position absolute
            bottom 10px
            font-size 12px
            padding 5px
            .tech
              color white
              border-radius 5px
              padding 3px
              float left
              margin 5px 5px 0 0
              &.Actionscript
                background red
              &.Php
                background purple
              &.Coffeescript
                background rgb(162, 111, 111)
              &.Javascript
              &.jQuery
                background teal
              &.Flex
                background grey
              &.XML
                background green
              &.HTML5
                background rgb(255, 99, 11)
              &.Stylus
                background #a1bc06
              &.Knockout 
                background rgb(255, 99, 11)
              &.Durandal
                background rgb(189, 0, 0)
              &.Papervision3D
                background blue
              &.Robotlegs
                background lighten(red, 20)

        &.front
          cursor pointer  

      img
        border-radius 4px
        width 100%
        height 100%
a 
  color inherit
