body
  color black
  position relative
  padding 50px
  font 18px 'Didact Gothic', serif
  background-color rgb(0, 62, 87)
  background-size 50px, 100px

ul
  li
    list-style-type: none

#contact
  float left

#about
  float left

#projects
  margin 0 auto
  #projects-list 
    li
      float left
      border 4px solid white
      top 30
      left 30
      font-size 24px
      background rgba(255, 255, 255, .5)
      border-radius 3px
      width 200px
      height 300px
      padding 10px
      box-shadow -9px 9px 15px rgba(65, 65, 65, 0.17)
      border-radius 3px
      .inner
        width 100%
        height 100%
        background white

      img
        width 200px
        height 200px
        background whitesmoke
      label
        color rgba(0,147,112, 1)
        position absolute
        bottom 0
        font-smoothing: antialiased
a 
  color #00B7FF

