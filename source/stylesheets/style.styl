global-reset()

$blue = #224e6d
$red = rgba(235, 28, 0, 1)
$hoverColor = #11C47D
$padding = 5px
borderRadius()
  border-radius 4px
textglow()
  text-shadow 0px 1px 3px rgba(0,183,255,1)
  
html
body
  height 100%
  color $blue
  font 18px 'Didact Gothic', serif
  background white

a 
  color $blue
  text-decoration none
  &:hover
    text-decoration underline

#menu
  border-bottom-right-radius 10px
  padding 11px
  background #E6E6E6
  transition background .5s ease-out
  top 68px
  border-right 1px solid $blue
  border-bottom 3px solid $blue  
  position fixed
  box-shadow -8px 5px 26px rgba(0, 0, 0, 0.21)
  li
    margin-bottom 10px
    a
      text-decoration none
      color $blue

  &:hover
    background $blue
    a
      color $hoverColor
  
.section
  borderRadius()
  margin-bottom 15px
  position relative
  background whitesmoke
  .section-content
    padding 18px

.content
  padding 86px 63px 0 63px

.header
  z-index 1000
  width 100%
  border-radius 0
  padding-bottom 4px
  box-shadow 0 5px 8px rgba(0,0,0,0.21)
  background $blue
  position fixed
  .position
    color white
    font-size 14px
  .logo
    border-top-right-radius 5px
    border-top-left-radius 5px
    border-bottom-right-radius 8px
    border-bottom-left-radius 8px
    margin 6px 6px 2px 6px
    width 34px
    padding 7px
    border-right 2px solid
    border-top 2px solid
    border-left 2px solid
    border-bottom 6px solid
    color rgba(23, 53, 73, 0.82)
    float left
    box-shadow 4px 4px 9px rgba(0, 0, 0, 0.29)

h1.me
  padding-top 3px
  font-weight bold
  color white
  font-size 26px
  display inline-block

ul
  li
    list-style-type: none

.section-header
  border-bottom 3px solid
  border-top 1px solid
  border-right 1px solid
  border-bottom-right-radius 6px
  border-top-right-radius 6px
  margin-left -7px
  border-top-left-radius 7px
  position relative
  padding 8px
  font-weight bold
  font-size 16px
  display inline-block
  color #224e6d
  background #d1d1d1
  box-shadow 6px 6px 19px rgba(0, 0, 0, 0.16)
  &:before
    content ''
    display block
    position absolute
    left -1px
    bottom -10px
    border solid 4px transparent
    border-right-color #224e6d
    border-top-color #224e6d
    width 0
    height 0
    z-index 0
  &.projects-header
    z-index 3
    float left

.social
  top 0
  padding 0px 6px
  position fixed
  border-radius 38px
  font-size 32px
  right 0
  a
    textglow()
    text-decoration none
    color white
    padding $padding
    cursor pointer
    transition color .5s ease-out
    &:hover
      text-shadow none
      color $hoverColor

#about
  font-size 20px
  a 
    font-weight bold

#contact
  font-size 16px
  label
    display block
    padding 2px
    &.invalid
      color $red
      & + input
      & + textarea
        transition background .5s ease-out
        background $red
      &:after
        opacity 1 
    &:after
      transition opacity .5s ease-out
      opacity 0
      color $red
      margin-left 5px 
      content '\F088 '
      font-family FontAwesome
      font-size 16px
      width 15px
  .field
    margin-bottom 5px
  input
  textarea
    borderRadius()
    border 1px solid $blue
    padding $padding
    color $blue
    width 100%
    max-width 400px
    font-size inherit
    font-family inherit

  textarea
    height 100px

  #send-mail
    background $blue
    color white
    transition color .5s ease-out
    cursor pointer
    border none
    font-size 16px
    font-family inherit
    padding 7px 17px
    borderRadius()
    float left
    span
      color $hoverColor 
      display none
    &[disabled]
      cursor auto
      span
        margin-left 10px
        display inline-block
        animation spin .5s infinite linear
      &:hover
        color white
    &:hover
      color $hoverColor
  .email-message
    float left
    padding-left 10px

#projects
  padding 75px 150px 50px 150px
  height 400px
  &.expanded
    padding-left 600px
    padding-right 600px
  ul#projects-list
    position relative
    z-index 1001
    perspective 1600
    width 185px 
    margin 0 auto
    li.project
      position absolute
      transform-origin 0 275px
      font-size 24px
      transform-style: preserve-3d
      .mobile-item
        display none
      .face
        position absolute
        backface-visibility hidden
        padding $padding
        width 195px
        height 295px
        borderRadius()
        background rgba(255, 255, 255, .5)
        border 3px solid rgba(255, 255, 255, .3)
        .inner
          borderRadius()
          background white
          width 100%
          height 100%
          & > label
            padding $padding
        &.back
          box-shadow -8px 8px 39px rgba(0, 0, 0, 0.21)
          transform rotateY(180deg)
          .project-name
            padding $padding
            color #003457 
            font-size 19px
            display block
            position relative
            width 164px
          .close
            color #00548D
            padding $padding
            position absolute
            top 5px
            right 5px
            cursor pointer
            font-size 20px
          .technology
            font-size 14px
            padding $padding
            .tech
              color white
              borderRadius()
              padding 3px
              float left
              margin 5px 5px 0 0
              &.Actionscript
                background red
              &.Php
                background purple
              &.Coffeescript
                background rgb(162, 111, 111)
              &.Javascript
                background #F5CE95
              &.jQuery
                background teal
              &.Flex
                background grey
              &.XML
                background #259125
              &.HTML5
                background rgb(255, 99, 11)
              &.Stylus
                background #a1bc06
              &.Knockout 
                background rgb(255, 99, 11)
              &.Durandal
                background rgb(189, 0, 0)
              &.Papervision3D
                background #00007C
              &.Robotlegs
                background lighten(red, 20)
              &.Facebook
                background blue
        &.front
          box-shadow -11px 10px 31px rgba(68, 68, 68, .09)
          cursor pointer
      img
        borderRadius()
        width 100%

@media all and (max-width: 1085px)
  #projects
    ul#projects-list
      z-index 999

@media all and (max-width: 600px)
  #menu
    display none

  .content
    padding 80px 12px 0 12px

  .section-header
    display none

  .social
    margin-top 4px
    font-size 26px
    a
      padding 2px
      display block

  #projects
    background white
    padding 0 !important
    height auto
    ul#projects-list
      position static
      z-index 0
      perspective none
      width auto 
      margin auto
      li.project
        position static
        font-size 24px
        transform-style flat
        transform rotate(0) scale(1, 1) !important
        opacity 1 !important
        .mobile-item
          borderRadius()
          background whitesmoke
          margin-top 5px
          padding 10px
          display block
          transition background .5s ease-out
          &:hover
            background $hoverColor  
          a
            color $blue
        .face
          display none


