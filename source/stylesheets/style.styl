global-reset()

$blue = #224e6d
$red = rgba(235, 28, 0, 1)
$hover_color = #11C47D
textglow()
   text-shadow 0px 1px 3px rgba(0,183,255,1)
  
html
body
  height 100%
  color $blue
  font 18px 'Didact Gothic', serif
  background white

a 
  color $blue
  text-decoration none
  &:hover
    text-decoration underline

#menu
  border-bottom-right-radius 10px
  padding 11px
  background #E6E6E6
  top 72px
  border-right 1px solid $blue
  border-bottom 3px solid $blue  
  position fixed
  box-shadow -8px 5px 26px rgba(0, 0, 0, 0.21)
  li
    margin-bottom 10px
    a
      text-decoration none
      color $blue

  &:hover
    background $blue
    a
      color $hover_color
  
.section
  border-radius 4px
  margin-bottom 20px
  position relative
  background whitesmoke
  .section-content
    padding 18px

.content
  padding 96px 63px 10px 63px
  min-width 676px

.header
  z-index 1000
  width 100%
  border-radius 0
  padding-bottom 4px
  box-shadow -8px 5px 8px rgba(0,0,0,0.21)
  background $blue
  position fixed
  .position
    color white
    font-size 16px
  .logo
    border-top-right-radius 5px
    border-top-left-radius 5px
    border-bottom-right-radius 8px
    border-bottom-left-radius 8px
    margin 7px
    width 34px
    padding 7px
    border-right 2px solid
    border-top 2px solid
    border-left 2px solid
    border-bottom 6px solid
    color rgba(24, 53, 73, 1)
    float left
    box-shadow 4px 4px 9px rgba(0, 0, 0, 0.29)

h1.me
  padding-top 1px
  font-weight bold
  color white
  font-size 28px
  display inline-block

ul
  li
    list-style-type: none

.section-header
  border-bottom 3px solid
  border-top 1px solid
  border-right 1px solid
  border-bottom-right-radius 6px
  border-top-right-radius 6px
  margin-left -7px
  border-top-left-radius 7px
  position relative
  padding 8px
  font-weight bold
  font-size 16px
  display inline-block
  color #224e6d
  background #d1d1d1
  box-shadow 6px 6px 19px rgba(0, 0, 0, 0.16)
  &::before
    content ''
    display block
    position absolute
    left -1px
    bottom -10px
    border solid 4px transparent
    border-right-color #224e6d
    border-top-color #224e6d
    width 0
    height 0
    z-index 0
  &.projects-header
    z-index 3
    float left

.social
  top 0
  padding 0px 6px
  position fixed
  border-radius 38px
  font-size 32px
  right 0
  a
    text-decoration none
    color white
    textglow()
    padding 5px
    cursor pointer
    &:hover
      text-shadow none
      color $hover_color

#about
  font-size 20px
  a 
    font-weight bold

#contact
  font-size 16px
  label
    display block
    padding 2px
    &.invalid
      color $red
      & + input
      & + textarea
        transition background .5s ease-out
        background $red
      &::after
        opacity 1 
    &::after
      transition opacity .5s ease-out
      opacity 0
      color $red
      margin-left 5px 
      content '\F088 '
      font-family FontAwesome
      font-size 16px
      width 15px
  .field
    margin-bottom 5px
  input
  textarea
    border-radius 2px
    border 1px solid $blue
    padding 5px
    color $blue
    width 100%
    max-width 400px
    font-size inherit
    font-family inherit

  textarea
    height 100px
  #send-mail
    background $blue
    color white
    cursor pointer
    border none
    font-size 16px
    font-family inherit
    padding 7px 17px
    border-radius 4px
    float left
    span
      color $hover_color 
      display none
    &[disabled]
      cursor auto
      span
        margin-left 10px
        display inline-block
        animation spin .5s infinite linear

      &:hover
        color white

    &:hover
      color $hover_color
  .email-message
    float left
    padding-left 10px

#projects
  padding 75px 150px 50px 150px
  height 400px
  &.expanded
    padding-left 600px
    padding-right 600px
  #projects-list
    position relative
    z-index 1001
    perspective 1600
    width 185px 
    margin 0 auto
    li
      position absolute
      transform-origin 0 275px
      font-size 24px
      transform-style: preserve-3d 
      .face
        position absolute
        backface-visibility hidden
        padding 5px
        width 195px
        height 295px
        border-radius 4px
        background rgba(255, 255, 255, .5)
        border 3px solid rgba(255, 255, 255, .3)
        .inner
          background white
          width 100%
          height 100%
          border-radius 4px
          & > label
            padding 5px
        &.back
          box-shadow -8px 8px 39px rgba(0, 0, 0, 0.21)
          transform rotateY(180deg)
          .project-name
            padding 5px
            color #003457 
            font-size 19px
            display block
            position relative
            width 164px
          .close
            color #00548D
            padding 5px
            position absolute
            top 5px
            right 5px
            cursor pointer
            font-size 20px
          .technology
            font-size 14px
            padding 5px
            .tech
              color white
              border-radius 4px
              padding 3px
              float left
              margin 5px 5px 0 0
              &.Actionscript
                background red
              &.Php
                background purple
              &.Coffeescript
                background rgb(162, 111, 111)
              &.Javascript
                background #F5CE95
              &.jQuery
                background teal
              &.Flex
                background grey
              &.XML
                background #259125
              &.HTML5
                background rgb(255, 99, 11)
              &.Stylus
                background #a1bc06
              &.Knockout 
                background rgb(255, 99, 11)
              &.Durandal
                background rgb(189, 0, 0)
              &.Papervision3D
                background #00007C
              &.Robotlegs
                background lighten(red, 20)
              &.Facebook
                background blue

        &.front
          box-shadow -11px 10px 31px rgba(68, 68, 68, .09)
          cursor pointer

      img
        border-radius 4px
        width 100%
        height 100%

@media all and (max-width: 1223px)
  .content 
    padding-top 88px 
  .header 
    .me
      padding-top 5px
      font-weight bold
      font-size 26px
    .position 
      font-size 14px

@media all and (max-width: 1085px)
  #projects
    #projects-list
      z-index 999 

