h2.section-header Projects
#projects.section
	ul#projects-list
		each project in projects
			li(class='project')
				.face.front
					.inner
						img(src= project.image_url)
						//label= project.description
				.face.back
					.inner
						a.project-name(href= project.url)= project.name
						i.icon-remove-circle.close
						.technology
							each tech in project.technology
								.tech(class= tech)= tech
						